<h1>Log In</h1>

<%= form_tag login_path do %>
    <%= label_tag :email, nil, :class => 'form-control' %>
    <%= email_field_tag :email, nil, :class => 'form-control' %>

    <%= label_tag :password, nil, :class => 'form-control' %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>

    <%= submit_tag "Sign in", :class => "btn btn-outline-secondary" %>
<% end %>